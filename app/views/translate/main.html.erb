<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Spindi Translate</h1>
            <p class="lead">Welcome, Bat Spindi!</p>

            <form role="form">
            	<div class="form-group">
            		<label for="text-area">Enter Spinderman text here:</label>
    				<textarea class="form-control" rows="5" name="spinditext"><%= @text %></textarea>
            	</div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>

            <br>

            <form role="form">
                <div class="form-group">
                    <label for="text-area">Translated text appears here:</label>
                    <textarea class="form-control" rows="5" name="bgtext">
                    <% if @text %>
                        <%= @words %>
                        <%= @replace %>
                    <% end %>
                    </textarea>
                </div>
            </form>

            <ul class="list-unstyled">
	            <li>Bootstrap v3.3.1</li>
	            <li>jQuery v1.11.1</li>
            </ul>
        </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->